<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiviCalc.Views.CambioPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Calculadora en Divisas" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            
            <StackLayout Orientation="Horizontal" BackgroundColor="AliceBlue" Padding="0,10,0,10" HorizontalOptions="EndAndExpand">
                <Label Text="Tasa de cambio:" FontSize="Medium" Padding="30,10,30,10"/>
                <Entry x:Name="entryCambio" Placeholder="Indique monto a convertir (20)" Text="2916071,30" ></Entry>
            </StackLayout>
            <Button Text="Guardar"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>